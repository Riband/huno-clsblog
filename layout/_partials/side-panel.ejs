<% if (is_home()) { %> 
<header class="panel-cover">
<% } else { %>
<header class="panel-cover panel-cover--collapsed">
<% } %>

  <div class="panel-main">
    <div class="panel-main__inner panel-inverted">
    <div class="panel-main__content">

        <% if (theme.logo) { %>
        <a href="/" title="link to homepage for <%= config.title %>"><img src="<%= theme.logo %>" width="80" alt="<%= config.title %> logo" class="panel-cover__logo logo" /></a>
        <% } %>

        <h1 class="panel-cover__title panel-title"><a href="/" title="link to homepage"><%= config.title %></a></h1>
        <hr class="panel-cover__divider" />
        <% if (config.subtitle) { %>
        <p class="panel-cover__description">
          <%= config.subtitle %>
        </p>
        <hr class="panel-cover__divider" />
            <span class="mobile btn-mobile-menu">
              <i class="icon icon-list btn-mobile-menu__icon"></i>
              <i class="icon icon-x-circle btn-mobile-close__icon hidden"></i>
            </span> 
        <% } %>

        <div class="navigation-wrapper">
          <nav class="cover-navigation cover-navigation--primary">
            <ul class="navigation">

              <% for (var i in theme.menu){ %>
                <%
                  if (theme.menu[i]+'' == '/#blog') {
                    nav_btn_class = 'blog-button';
                  } else {
                    nav_btn_class = '';
                  }
                %>
                <li class="navigation__item"><a href="<%- theme.menu[i] %>" title="" class="<%= nav_btn_class %>"><%- i %></a></li>
              <% } %>

            </ul>
          </nav>
          <% //hc bgm option %> 
          <%         var hc_bgm="";                                                    %>
          <%         if (theme.hc_bgm){                                                %>
          <%             hc_bgm = theme.hc_bgm;                                        %>
          <%         }                                                                 %>
          <%         if (config.hc_bgm){                                               %>
          <%             hc_bgm = config.hc_bgm;                                       %>
          <%         }                                                                 %>
          <%         if (page.hc_bgm){                                                 %>
          <%             hc_bgm = page.hc_bgm;                                         %>
          <%         }                                                                 %>
          <% if (hc_bgm) {                                                             %>
              <br/>
              <audio controls autoplay loop class="hc_bgm_control">
                <source src="<%- hc_bgm %>" type="audio/mpeg">
              </audio>
          <% }                                                                  %>
          <%   //-- hc bgm option end                                           %>
          <%   // hc hc_panel_addition                                          %>
          <%         var hc_panel_addition="";                                  %>
          <%         if (theme.hc_panel_addition){                              %>
          <%             hc_panel_addition = theme.hc_panel_addition;           %>
          <%         }                                                          %>
          <%         if (config.hc_panel_addition){                             %>
          <%             hc_panel_addition = config.hc_panel_addition;          %>
          <%         }                                                          %>
          <%         if (page.hc_panel_addition){                               %>
          <%             hc_panel_addition = page.hc_panel_addition;            %>
          <%         }                                                          %>
          <% if (hc_panel_addition) {                                           %>
            <br/>
            <%- hc_panel_addition %>
          
          <% } %>
          <% //hc hc_panel_addition end %>
          <%- partial('_partials/social') %>
        </div>
      </div>
    </div>
    <div class="panel-cover--overlay"></div>
  </div>
</header>
